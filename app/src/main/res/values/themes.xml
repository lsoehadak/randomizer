<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Randomizer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="materialCardViewStyle">@style/CardViewStyle</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <!-- Custom card view style -->
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="RegularTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BoldTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Custom text field style -->
    <style name="TextFieldShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
    </style>

    <style name="ErrorTextFieldAppearance">
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginStart">-5dp</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="OutlinedTextFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintTextColor">@color/black_60</item>
        <!--        <item name="hintTextAppearance">@style/HintTextAppearance</item>-->
        <item name="fontFamily">@font/quicksand</item>
        <item name="shapeAppearanceOverlay">@style/TextFieldShapeAppearance</item>
        <item name="boxStrokeColor">@color/selector_text_field_stroke_color</item>
        <item name="boxStrokeErrorColor">@color/text_field_error</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="errorTextAppearance">@style/ErrorTextFieldAppearance</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="ButtonShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeBottomLeft">24dp</item>
    </style>

    <style name="FilledButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@drawable/selector_bg_filled_button</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="shapeAppearanceOverlay">@style/ButtonShapeAppearance</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_theme</item>
        <item name="strokeColor">@color/main_theme</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="shapeAppearanceOverlay">@style/ButtonShapeAppearance</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ChipRegularStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/CustomChipTextAppearance</item>
        <item name="android:textColor">@color/main_theme</item>
        <item name="android:includeFontPadding">false</item>
        <item name="chipBackgroundColor">@color/blue_10</item>
        <item name="android:clickable">false</item>
        <item name="android:checkable">false</item>
        <item name="chipMinHeight">40dp</item>
    </style>

    <style name="ChipEntryStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:textAppearance">@style/CustomChipTextAppearance</item>
        <item name="android:textColor">@color/main_theme</item>
        <item name="android:includeFontPadding">false</item>
        <item name="chipBackgroundColor">@color/blue_10</item>
        <item name="android:clickable">true</item>
        <item name="android:checkable">false</item>
        <item name="closeIconTint">@color/main_theme</item>
        <item name="chipMinHeight">40dp</item>
    </style>

    <style name="CustomChipTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:letterSpacing">0.04</item>
    </style>
</resources>